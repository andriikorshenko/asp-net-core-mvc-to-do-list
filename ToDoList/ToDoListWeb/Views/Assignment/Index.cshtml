@model IEnumerable<Assignment>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-light">My Assignments</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Assignment" asp-action="Create" class="btn btn-outline-light">
                <i class="bi bi-bookmark-plus"></i> &nbsp; Create New
            </a>
        </div>
    </div>
    </br>

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    ToDo
                </th>
                <th>
                    CreatedAt
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="80%">
                        @item.Text
                    </td>
                    <td width="20%">
                        @item.CreatedAt
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>