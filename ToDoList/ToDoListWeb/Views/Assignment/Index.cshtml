@model IEnumerable<Assignment>
@{
    ViewData["Title"] = "Index";
}

<br />
<h1>My Assignments</h1>
<br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                ToDo
            </th>
            <th>
                CreatedAt
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td width="80%">
                    @item.Text
                </td>
                <td width="20%">
                    @item.CreatedAt
                </td>
            </tr>
        }
    </tbody>
</table>