@model Assignment
@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-light">Edit Assignment</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Text"></label>
            <input asp-for="Text" class="form-control">
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">
            <i class="bi bi-check-square"></i> &nbsp; Update
        </button>
        <a asp-controller="Assignment" asp-action="Index" class="btn btn-secondary" style="width:150px">
            <i class="bi bi-x-circle"></i> &nbsp; Cancel
        </a>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
